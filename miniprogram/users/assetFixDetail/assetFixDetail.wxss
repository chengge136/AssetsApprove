page{
  background-color:#F8F8F8; 
}
.title{
  display:flex;
  flex-direction: column;
  align-items:center;
  background-color: #FFFFFE; 
  margin: 0rpx 20rpx 20rpx 20rpx;
  height: 130rpx;

}
.status{
  margin-bottom: 10rpx;
}
.status text{
  font-size:40rpx;
  font-weight:bold;
}
.div{
  margin: 20rpx;
  background-color:#FFFFFE; 
  padding: 20rpx;
}
.userinfo{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}
.userinfo text{
  color:#7B7B7B;
}

.menu_item{
  display: flex;
  justify-content: space-between;
}
.other{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: space-between;
  height: 350rpx;
}

textarea {
  padding:10rpx;
  width: 650rpx;
  height: 150rpx;
  border: 2px solid #ddd;
}


.image{
  display:flex;
  margin: 30rpx; /* 边距 */
}
.image text{
  font-size: 11pt;
}
.image image{
  height: 140rpx;
  width: 30%;
  margin-left: 37rpx;
}
.problem-desc{
  margin-bottom: 30rpx; /* 边距 */
}