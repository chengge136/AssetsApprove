page{
  width:100%;
  height:100%;
  background-color:#F8F8F8; 
}
.container{
  display: flex;
  flex-direction: row;
  height:100%;
}
.left{
  width:100px;
  height:80%;
}
.left scroll-view{
  height:100%;
}
.nav_item{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 120rpx;
  padding:10rpx;
  color:#7B7B7B;
  font-size: 10pt;
  background-color:#F6F6F6;
}


.nav_item.active{
  background-color:#fff;
  color:#181818;
  font-weight: bold;
}

.nav_item.active i{
  
  color:#FFC300;
  
}

.right{
  flex:1;
  height:100%;
}
.right scroll-view{
  height:100%;
}
.title{
  display: flex;
  height:30px;
  font-size: 12pt;
  color:#7B7B7B;
  background-color: #fff;
  padding:10px;
  justify-content: center;
}


/* 隐藏滚动条的 */
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}

.item{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  background-color:#fff;
  border-bottom: 1px solid #D2D2D2;
  margin: 10rpx;
  border-radius: 5px;

}
.assetimg{
  width: 250rpx;
  height: 200rpx;
  border-radius: 5px;

}

.itemname{
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content:space-between;
  align-items:center;
  padding: 40rpx;

}
.itemname text{
  font-size: 14pt;
}

.action{
  width: 200rpx;
  margin-right: 30rpx;
  padding: 30rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.action_item{
  padding-left: 20rpx;
}