page {
  padding: 10rpx;
}

.action {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin: 30rpx;
  padding: 30rpx;
}

.item {
  display: flex;
  flex-direction: column;
  height: 250rpx;
  justify-content: space-between;
  border: 3rpx solid #ddd;
  width: 250rpx;
  padding: 30rpx;

}

.item .logo {
  margin-left: 50rpx;
  background-color: #FEFAFB;
  border-radius: 50%;
  width: 80px;
  height: 80px;
  border: 2px solid #ddd;

}
.item text{
  font-size: 35rpx;
}

.item i {
  position: relative;
  left: 38rpx;
  top: 38rpx;

}

.comment {
  display: flex;
  flex-direction: column;
  align-items: left;
  margin: 20rpx;
  border-bottom:2px solid #F5F5F5;
}

.title text {
  font-size: 35rpx;
}

.content text {
  margin-top: 5rpx;
  font-size: 26rpx;
  color: #999999;
}